<Window x:Class="DesktopHumansDepartment.DepartmentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopHumansDepartment"
        mc:Ignorable="d"
        Title="DepartmentsWindow" Height="300" Width="300">
    <Grid>
        <Button x:Name="add" Content="Add department" HorizontalAlignment="Left" Margin="101,23,0,0" VerticalAlignment="Top" Width="103" Click="add_Click"/>
        <Button x:Name="info" Content="Department info" HorizontalAlignment="Left" Margin="101,64,0,0" VerticalAlignment="Top" Width="103" Click="info_Click"/>
        <Button x:Name="sort" Content="Sort" HorizontalAlignment="Left" Margin="101,109,0,0" VerticalAlignment="Top" Width="103" Click="sort_Click"/>
        <Button x:Name="back" Content="Back" HorizontalAlignment="Left" Margin="101,152,0,0" VerticalAlignment="Top" Width="103" Click="back_Click"/>
        <Button x:Name="exit" Content="Exit" HorizontalAlignment="Left" Margin="101,197,0,0" VerticalAlignment="Top" Width="103" Click="exit_Click"/>

    </Grid>
</Window>
